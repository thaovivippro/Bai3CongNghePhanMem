@model List<Employee>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<h2>Danh sách nhân viên</h2>

<a href="/Employee/Create" class="btn btn-primary mb-3">Thêm mới</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Vị trí</th>
            <th>Tuổi</th>
            <th>Email</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Name</td>
                <td>@e.Position</td>
                <td>@e.Age</td>
                <td>@e.Email</td>
                <td>
                    <a href="/Employee/Details/@e.Id" class="btn btn-info btn-sm">Xem</a>
                    <a href="/Employee/Edit/@e.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a href="/Employee/Delete/@e.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
