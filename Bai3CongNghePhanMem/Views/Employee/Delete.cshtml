@model Employee
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<h2>Xóa nhân viên</h2>
<form asp-action="DeleteConfirmed" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-3">
        <label>Tên</label>
        <input class="form-control" value="@Model.Name" readonly />
    </div>
    <div class="mb-3">
        <label>Vị trí</label>
        <input class="form-control" value="@Model.Position" readonly />
    </div>
    <div class="mb-3">
        <label>Tuổi</label>
        <input class="form-control" value="@Model.Age" readonly />
    </div>
    <div class="mb-3">
        <label>Email</label>
        <input class="form-control" value="@Model.Email" readonly />
    </div>

    <button type="submit" class="btn btn-danger">Xóa</button>
    <a href="/Employee" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
